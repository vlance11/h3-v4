{%- liquid
  assign sid = section.id
  assign col = section.settings.col_pr
  assign col_tb = section.settings.col_pr_tb
  assign source = section.settings.source
  assign cl_mb = section.settings.col_pr_mb
 %}
{%- for i in (1..1) -%}
  {%- if section.settings.hidden %}{% break %}{% endif -%}
  <section id="laber_{{sid}}" class="{{ section.settings.style }}">
      <div class="{{section.settings.layout}}">
        <div class="row alo-border-radius" style="--alo-border-radius:15px;">
          {% assign image = section.settings.image_sl %}
          {% assign url = section.settings.link_img %}
          {% assign open_link = section.settings.open_link %} 
          {% if image != blank %} 
          <div class="banner-static pd-0 col-lg-6 col-md-6 col-12" style="order:{{section.settings.position}};">
            <div  class="images-card w-full h-full" {{ block.shopify_attributes }}>
                {% render 'responsive-image', image: image, image_class: 'w-full h-full',url: url,open_link:open_link %}
              </div>
          </div>
          {% endif %}  
          {%- if section.blocks.size > 0 -%}
            <div class="alo-shipping {% if image != blank %} col-lg-6 col-md-6 col-12{% endif %} ">
            <div class="row row-0">
            {% assign index = 0 %}  
            {%- for block in section.blocks -%}
                {%- case block.type -%} 
                {% when 'shipping' %}
                <div class="item item_{{index}} col-sm-{{cl_mb}} col-md-{{col_tb}} col-lg-{{col}} bl_{{block.id}}">
                  <div class="laber_shipping flex-wrap flex">                
                    {%- if source == '1' -%}
                    <div class="icon">
                      <i class="{{block.settings.icon}}"></i>
                    </div>
                    {%- elsif source == '2' -%}
                    {% assign image = block.settings.icon_img %} 
                    <div class="icon icon_img">
                      {% if image != blank %}
                        {% render 'responsive-image', image: image, image_class: 'w-full h-full' %}
                      {% else %}
                      {% capture current %}{% cycle 1, 2, 3, 4, 5 %}{% endcapture %}
                            {{ 'collection-' | append: current | placeholder_svg_tag: 'placeholder-svg w-full h-full' }}
                       {% endif %} 
                    </div>
                    {%- else -%}
                      {% assign icon_svg = block.settings.icon_svg %} 
                      <div class="icon icon_svg">
                      {% if icon_svg != blank %}
                          {{icon_svg}}
                       {% else %}
                      {% capture current %}{% cycle 1, 2, 3, 4 %}{% endcapture %}
                            {{ 'collection-' | append: current | placeholder_svg_tag: 'placeholder-svg w-full h-full' }}
                       {% endif %}  
                      </div>
                    {%- endif -%}
                    <div class="content">
                      <h3 class="title">{{block.settings.title}}</h3>
                      <p >{{block.settings.text}}</p>
                    </div>
                  </div>
                </div>
                {% assign index = index | plus: 1 %}
              {%endcase%}	
            {%endfor%} 
             </div>
            </div>
          {%- endif -%}
        </div>
        
      </div>
    
    </section>
    {% if section.settings.show_border %}<div class="{{section.settings.layout}}"><div class="line"></div></div>{% endif %}
{%- endfor -%}
{%- render 'section_style' -%} 
