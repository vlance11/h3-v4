{%- assign items_length = search.results_count -%}
{%- assign namespace = 'wishlist' -%}
{% for product in search.results %}
  <div
    class="product-store-lists"
    data-js-product
    data-product-handle="{{ product.handle }}"
    data-product-variant-id="{{ id }}"
  >
    <div class="product-store-lists__image ">
      <a href="{{ url }}" class="d-block"><img alt="{{ product.title }}"></a>
    </div>
    <div class="product-store-lists__content">
      <div class="product-store-lists__title">
        <h3>
          <a href="{{ url }}">{{ title }}</a>
        </h3>
      </div>
      <div class="product-store-lists__price">
        {% render 'product-get-price' with price: price compare_at_price: compare_at_price %}
      </div>
      <span
        class="product-store-lists__remove btn-link js-store-lists-remove-{{ namespace }}"
        title="{{ 'products.product.remove' | t }}"
      >
        <i class="icon-x"></i>
      </span>
    </div>
  </div>
{%- endfor -%}

